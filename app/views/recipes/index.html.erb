
<h1>Searching for - <%= @search_term  %></h1>

<% if @recipes.nil? || @recipes.empty? %>
  <p>Sorry, we couldn't find any recipe for your search.</p>

<% else %>

  <table border="1">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Social rank</th>
    </tr>

    <% @recipes.each do |recipe| %>
      <% recipe_title = sanitize recipe["title"] %>
        <tr class=<%= cycle('even', 'odd')  %>>
        <td><%= link_to(image_tag(recipe["image_url"], size: '100'), recipe["source_url"]) %></td>
        <td><%= link_to(recipe_title, recipe["source_url"])%></td>
        <td><%= recipe["social_rank"] %></td>

      </tr>
    <% end %>

  </table>

<% end %>
